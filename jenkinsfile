#!/bin/groovy
pipeline {
agent {
        node {
            label "master"
        }
    }
    environment {
        APP_VERSION = "1.0.${env.BUILD_NUMBER}"
    }
  tools {
    nodejs 'default-nodejs'
  }
  stages {
    stage('Setup') {
      steps {
        script {
          sh 'npm install'
        }
      }
    }
    stage('Test') {
      steps {
        script {
          sh 'npm run test'
        }
      }
      post {
        always {
          step([$class: 'CoberturaPublisher', coberturaReportFile: 'output/coverage/jest/cobertura-coverage.xml'])
        }
      }
    }
    stage('Build') {
      steps {
      dir(){
      }
        script {
          sh 'docker build -t infytest:latest .'
        }
      }
    }
    stage('Deploy') {
      steps {
        script {
          sh 'docker run -d -p 49001:8080 -t infytest'
          sh 'docker run -d -p 3000:3000 -e APP_VERSION="${APP_VERSION}" -t infytest node app.js --app_version="${APP_VERSION}" --git_hash=$(git rev-parse --short HEAD) &'
        }
      }
    }
  }
}